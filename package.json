{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "scripts": {
    "test": "npx bddgen && npx playwright test --project=Chrome",
    "test:tag": "sh -c 'npx bddgen --tags \"$tags\" && npx playwright test' --project=Chrome",
    "report": "npx http-server ./cucumber-report -c-1 -a localhost -o index.html",
    "watch:bdd": "nodemon -w ./features -e feature,js,ts --exec \"npx bddgen\"",
    "watch:pw": "playwright test --ui",
    "watch": "run-p watch:*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.54.2",
    "@types/dotenv": "^6.1.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.19.11",
    "allure-playwright": "^3.3.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "http-server": "14.1.1",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.3.1",
    "prettier": "3.4.2",
    "prettier-plugin-gherkin": "^3.1.1",
    "typescript": "^5.7.2"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "winston": "^3.17.0"
  }
}
